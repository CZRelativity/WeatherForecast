<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    
    <TextView
        android:id="@+id/item_center_tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周六"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/item_center_tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="晴"
        android:textSize="16sp"
        android:layout_toEndOf="@id/item_center_tv_day"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/item_center_tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11~23℃"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/item_center_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/icon_add"
        android:layout_toStartOf="@id/item_center_tv_temperature"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_center_tv_day"
        android:background="#000"/>

</RelativeLayout>